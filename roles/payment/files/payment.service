[Unit]
Description=Payment Service

[Service]
User=root
WorkingDirectory=/app
Environment=CART_HOST=cart.ananthagiri.online
Environment=CART_PORT=8080
Environment=USER_HOST=user.ananthagiri.online
Environment=USER_PORT=8080
Environment=AMQP_HOST=rabbitmq.ananthagiri.online
Environment=AMQP_USER=roboshop143
Environment=AMQP_PASS=roboshop1998

ExecStart=/usr/local/bin/uwsgi --ini payment.ini
ExecStop=/bin/kill -9 $MAINPID
SyslogIdentifier=payment

[Install]
WantedBy=multi-user.target